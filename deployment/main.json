              "name": "[format('{0}/policy', format('{0}/getbackend', format('{0}/getbackend', format('{0}{1}apim', parameters('prefix'), parameters('location')))))]",
              "properties": {
                "format": "xml",
                "value": "[format('<policies>\r\n  <inbound>\r\n    <base />\r\n    <return-response>\r\n      <set-status code=\"302\" />\r\n      <set-header name=\"Location\" exists-action=\"override\">\r\n        <value>@{{\r\n                    var backends = \"{0}\".Split('','');\r\n                    var i = new Random(context.RequestId.GetHashCode()).Next(0, backends.Length);\r\n                    return backends[i];\r\n                }}</value>\r\n      </set-header>\r\n    </return-response>\r\n  </inbound>\r\n  <backend>\r\n    <base />\r\n  </backend>\r\n  <outbound>\r\n    <base />\r\n  </outbound>\r\n  <on-error>\r\n    <base />\r\n  </on-error>\r\n</policies>', parameters('backends'))]"
